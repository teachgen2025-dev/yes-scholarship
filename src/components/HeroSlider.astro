---
interface Props {
  slides: {
    headline: string;
    subheadline: string;
    image: string;
    cta_text: string;
    cta_link: string;
  }[];
}
const { slides } = Astro.props;
---

<section class="relative h-[600px] md:h-[700px] overflow-hidden bg-slate-900 rounded-b-[2.5rem] md:rounded-[2.5rem] mx-0 md:mx-6 mt-0 md:mt-4 shadow-2xl">
  <div id="hero-slider" class="relative w-full h-full">
    {slides.map((slide, index) => (
      <div class={`absolute inset-0 transition-opacity duration-1000 ease-in-out ${index === 0 ? 'opacity-100 z-10' : 'opacity-0 z-0'} slide-item`}>
        <div class="absolute inset-0 bg-cover bg-center" style={`background-image: url('${slide.image}');`}></div>
        <div class="absolute inset-0 bg-gradient-to-r from-blue-900/90 to-blue-900/40"></div>
        
        <div class="relative z-20 h-full flex items-center max-w-7xl mx-auto px-8 md:px-16">
          <div class="max-w-2xl text-white pt-20">
            <h1 class="text-4xl md:text-6xl font-extrabold mb-6 leading-tight">{slide.headline}</h1>
            <p class="text-lg md:text-xl text-blue-100 mb-8 max-w-lg">{slide.subheadline}</p>
            <a href={slide.cta_link} class="inline-block bg-yellow-400 text-blue-900 px-8 py-4 rounded-full font-bold hover:bg-yellow-300 transition transform hover:-translate-y-1">
                {slide.cta_text}
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>

  <div class="absolute bottom-10 left-0 right-0 z-30 flex justify-center gap-3">
    {slides.map((_, i) => (
      <button class="w-3 h-3 rounded-full bg-white/30 hover:bg-white transition dot-nav" data-index={i}></button>
    ))}
  </div>
</section>

<script>
  // Simple Vanilla JS Slider Logic
  const slides = document.querySelectorAll('.slide-item');
  let current = 0;
  
  function nextSlide() {
    slides[current].classList.remove('opacity-100', 'z-10');
    slides[current].classList.add('opacity-0', 'z-0');
    
    current = (current + 1) % slides.length;
    
    slides[current].classList.remove('opacity-0', 'z-0');
    slides[current].classList.add('opacity-100', 'z-10');
  }

  setInterval(nextSlide, 5000); // Ganti tiap 5 detik
</script>