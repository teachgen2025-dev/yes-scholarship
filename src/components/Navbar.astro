---
const menus = [
  { name: "Beranda", href: "/" },
  { name: "Tentang Kami", href: "/tentang-kami" },
  { name: "Program", href: "/program" },
  { name: "Blog", href: "/blog" },
];
---

<nav class="sticky top-0 z-50 bg-white border-b border-slate-200" id="navbar">
    <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex justify-between items-center bg-white relative z-50">
            <a href="/" class="flex items-center gap-2">
                <img src="/images/logo-yes.png" alt="YES Logo" class="h-10 w-auto" />
            </a>
            
            <div class="hidden md:flex gap-8 text-sm font-semibold text-slate-600 items-center">
                {menus.map((menu) => (
                    <a href={menu.href} class="hover:text-blue-900 transition relative group">
                        {menu.name}
                        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-yellow-400 transition-all group-hover:w-full"></span>
                    </a>
                ))}
                <a href="/admin" class="bg-blue-900 text-white px-5 py-2.5 rounded-full text-sm font-bold hover:bg-blue-800 transition shadow-lg shadow-blue-900/20">
                    Portal YES
                </a>
            </div>

            <button id="mobile-menu-btn" class="md:hidden text-blue-900 focus:outline-none">
                <svg id="icon-open" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8 transition-transform duration-300">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
                <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8 hidden transition-transform duration-300 rotate-90">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
    </div>

    <div id="mobile-menu" class="fixed inset-0 top-[72px] bg-white z-40 transform -translate-y-full transition-transform duration-300 ease-in-out md:hidden flex flex-col justify-start pt-10 items-center gap-8 text-center shadow-inner">
        {menus.map((menu) => (
            <a href={menu.href} class="mobile-link text-xl font-bold text-slate-800 hover:text-blue-900 py-2 border-b-2 border-transparent hover:border-yellow-400 transition-all">
                {menu.name}
            </a>
        ))}
        <a href="/admin" class="mt-4 bg-blue-900 text-white px-10 py-4 rounded-full text-lg font-bold shadow-xl hover:bg-blue-800 transition transform hover:scale-105">
            Portal YES
        </a>
    </div>
</nav>

<script>
    // Logic Toggle Menu
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    const iconOpen = document.getElementById('icon-open');
    const iconClose = document.getElementById('icon-close');
    const links = document.querySelectorAll('.mobile-link');

    if (btn && menu && iconOpen && iconClose) {
        btn.addEventListener('click', () => {
            // Toggle posisi menu (Naik / Turun)
            menu.classList.toggle('-translate-y-full');
            
            // Toggle Icon Hamburger / Silang
            iconOpen.classList.toggle('hidden');
            iconClose.classList.toggle('hidden');
            
            // Kunci scroll body biar ga bisa discroll pas menu kebuka
            document.body.classList.toggle('overflow-hidden');
        });

        // Tutup menu kalau link diklik
        links.forEach(link => {
            link.addEventListener('click', () => {
                menu.classList.add('-translate-y-full'); // Kembalikan ke atas (sembunyi)
                iconOpen.classList.remove('hidden');
                iconClose.classList.add('hidden');
                document.body.classList.remove('overflow-hidden');
            });
        });
    }
</script>