---
interface Props {
    partners: { name: string; logo: string }[];
}
const { partners } = Astro.props;
---
<section class="py-16 px-6 text-center">
    <p class="text-sm font-bold text-slate-400 uppercase tracking-widest mb-8">Mitra & Kolaborator Program</p>
    <div class="flex flex-wrap justify-center items-center gap-12 opacity-70 hover:opacity-100 transition duration-500">
        {partners.map((p) => (
            <img src={p.logo} alt={p.name} class="h-12 md:h-16 w-auto object-contain mix-blend-multiply" />
        ))}
    </div>
</section>