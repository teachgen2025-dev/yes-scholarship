---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';

// 1. Generate path untuk setiap artikel
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

// 2. Ambil data props
const { entry } = Astro.props;
const { Content } = await entry.render();

// 3. Format Tanggal Indonesia
const formattedDate = entry.data.pubDate.toLocaleDateString('id-ID', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
});

// LOGIKA SHARE LINK
// 1. Ambil URL halaman saat ini
const currentUrl = Astro.url.href;

// 2. Encode URL & Judul (ubah spasi jadi %20, dll biar sah jadi URL)
const text = encodeURIComponent(`${entry.data.title} - Baca selengkapnya di: `);
const url = encodeURIComponent(currentUrl);

// 3. Susun Link Khusus
const waLink = `https://wa.me/?text=${text}${url}`;
const fbLink = `https://www.facebook.com/sharer/sharer.php?u=${url}`;
const xLink = `https://twitter.com/intent/tweet?text=${text}&url=${url}`;
---

<Layout title={`${entry.data.title} - Blog YES`}>
    <Navbar />

    <main class="bg-[#F8F9FB] min-h-screen pb-20">
        
        <header class="relative w-full h-[450px] overflow-hidden rounded-b-[2.5rem] shadow-xl group">
            <img 
                src={entry.data.image} 
                alt={entry.data.title} 
                class="w-full h-full object-cover group-hover:scale-105 transition duration-700 ease-in-out" 
            />
            <div class="absolute inset-0 bg-gradient-to-t from-blue-900/90 via-blue-900/40 to-transparent"></div>
            
            <div class="absolute bottom-0 left-0 w-full max-w-4xl mx-auto p-8 md:p-12 text-white z-10">
                <div class="bg-yellow-400 text-blue-900 text-xs font-bold px-4 py-1.5 rounded-full inline-block mb-6 uppercase tracking-widest shadow-lg shadow-yellow-400/20">
                    {entry.data.tags?.[0] || 'Artikel'}
                </div>
                
                <h1 class="text-3xl md:text-5xl font-bold leading-tight mb-6 drop-shadow-sm">
                    {entry.data.title}
                </h1>
                
                <div class="flex items-center gap-4 text-sm md:text-base text-blue-100 font-medium">
                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400">
                            <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM3.751 20.105a8.25 8.25 0 0116.498 0 .75.75 0 01-.437.695A18.683 18.683 0 0112 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 01-.437-.695z" clip-rule="evenodd" />
                        </svg>
                        <span>{entry.data.author}</span>
                    </div>
                    <span class="w-1 h-1 bg-yellow-400 rounded-full"></span>
                    <div class="flex items-center gap-2">
                         <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400">
                            <path fill-rule="evenodd" d="M6.75 2.25A.75.75 0 017.5 3v1.5h9V3A.75.75 0 0117.25 3v1.5h3a2.25 2.25 0 012.25 2.25v9a2.25 2.25 0 01-2.25 2.25h-3v1.5a.75.75 0 01-1.5 0v-1.5h-9v1.5a.75.75 0 01-1.5 0v-1.5h-3a2.25 2.25 0 01-2.25-2.25v-9A2.25 2.25 0 015.25 4.5h3V3A.75.75 0 016.75 2.25z" clip-rule="evenodd" />
                        </svg>
                        <span>{formattedDate}</span>
                    </div>
                </div>
            </div>
        </header>

        <article class="relative z-20 bg-white max-w-4xl mx-auto -mt-10 px-6 py-16 md:px-12 md:py-20 rounded-[2.5rem] shadow-xl border border-slate-100">
            <div class="prose prose-lg prose-slate max-w-none
                prose-headings:font-bold prose-headings:text-blue-900 
                prose-p:text-slate-600 prose-p:leading-relaxed
                prose-a:text-blue-600 prose-a:font-semibold prose-a:no-underline hover:prose-a:underline
                prose-strong:text-blue-900 prose-strong:font-bold
                prose-img:rounded-2xl prose-img:shadow-md prose-img:my-8
                prose-blockquote:border-l-yellow-400 prose-blockquote:bg-yellow-50 prose-blockquote:py-2 prose-blockquote:px-4 prose-blockquote:rounded-r-lg prose-blockquote:italic prose-blockquote:text-slate-700
                prose-li:marker:text-yellow-500">
                
                <Content />
            
            </div>

            <div class="mt-16 pt-10 border-t border-slate-100 flex flex-col md:flex-row justify-between items-center gap-6">
                <a href="/blog" class="group flex items-center gap-3 text-slate-500 font-bold hover:text-blue-900 transition">
                    <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center group-hover:bg-blue-100 transition">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-4 h-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                        </svg>
                    </div>
                    Kembali ke Blog
                </a>
                
                <div class="text-sm text-slate-400 font-medium flex items-center gap-4">
                    <span class="hidden md:inline">Bagikan inspirasi ini:</span>
                    <div class="flex gap-2">
                        
                        <a href={waLink} target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-600 hover:bg-[#25D366] hover:text-white transition duration-300" aria-label="Share ke WhatsApp">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-8.683-2.031-.967-.272-.297-.471-.446-.92-.446-.446 0-.745.223-.745.223s-.99 1.141-1.24 1.737c-.247.596-.546.745-1.139.546-.593-.198-2.548-1.037-3.924-2.261-1.066-.948-1.786-2.131-1.984-2.478-.198-.347-.021-.534.127-.683.136-.136.297-.347.446-.52.149-.174.198-.297.298-.495.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413z"/></svg>
                        </a>

                        <a href={fbLink} target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-600 hover:bg-[#1877F2] hover:text-white transition duration-300" aria-label="Share ke Facebook">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/></svg>
                        </a>

                        <a href={xLink} target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-600 hover:bg-black hover:text-white transition duration-300" aria-label="Share ke X">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                        </a>

                    </div>
                </div>
            </div>
        </article>

    </main>
</Layout>