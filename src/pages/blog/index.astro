---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import { getCollection } from 'astro:content';

// Ambil semua artikel & urutkan dari yang terbaru
const allPosts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog & Berita - YES">
    <Navbar />

    <main class="bg-[#F8F9FB] min-h-screen pb-20">
        
        <section class="bg-blue-900 text-white pt-20 pb-24 px-6 text-center rounded-b-[2.5rem]">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">Wawasan & Inspirasi</h1>
            <p class="text-blue-200 text-lg max-w-2xl mx-auto">Kumpulan artikel, tips lulus PTN, dan kisah sukses alumni.</p>
        </section>

        <section class="max-w-7xl mx-auto px-6 -mt-16 relative z-10">
            <div class="grid md:grid-cols-3 gap-8">
                {allPosts.map((post) => (
                    <a href={`/blog/${post.slug}`} class="bg-white rounded-[2rem] overflow-hidden shadow-lg border border-slate-100 hover:shadow-2xl hover:-translate-y-2 transition duration-300 group flex flex-col h-full">
                        <div class="h-56 overflow-hidden relative">
                            <img src={post.data.image} alt={post.data.title} class="w-full h-full object-cover group-hover:scale-105 transition duration-500" />
                            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-xs font-bold text-blue-900 uppercase">
                                {post.data.tags?.[0] || 'Umum'}
                            </div>
                        </div>
                        
                        <div class="p-8 flex flex-col flex-grow">
                            <div class="text-sm text-slate-400 mb-3 flex gap-2">
                                <span>{post.data.pubDate.toLocaleDateString('id-ID', {day: 'numeric', month: 'short', year: 'numeric'})}</span>
                                <span>â€¢</span>
                                <span>{post.data.author}</span>
                            </div>
                            <h2 class="text-xl font-bold text-slate-900 mb-3 leading-tight group-hover:text-blue-600 transition">
                                {post.data.title}
                            </h2>
                            <p class="text-slate-600 text-sm line-clamp-3 mb-6">
                                {post.data.description}
                            </p>
                            <span class="mt-auto text-blue-900 font-bold text-sm flex items-center gap-1">
                                Baca Selengkapnya &rarr;
                            </span>
                        </div>
                    </a>
                ))}
            </div>
        </section>

    </main>
</Layout>